{
  "name": "@crossmarkio/utils",
  "version": "0.0.2-beta",
  "author": "interc0der <intercoder@crossmark.io>",
  "license": "MIT",
  "keywords": [
    "monorepo",
    "utils",
    "crossmark",
    "XRPL",
    "wallet"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\"",
    "prebuild": "rm -rf ./dist",
    "postbuild": "yarn test",
    "build": "yarn prebuild && yarn c && yarn postbuild",
    "c": "tsc && tsc-alias",
    "lint": "eslint src --report-unused-disable-directives",
    "format": "prettier --write --plugin-search-dir=. **/*.{cjs,mjs,ts,tsx,md,json} --ignore-path ../.gitignore",
    "format:check": "prettier --check --plugin-search-dir=. **/*.{cjs,mjs,ts,tsx,md,json} --ignore-path ../.gitignore",
    "test": "jest -all",
    "prepare": "yarn ts-node ./scripts/prepare",
    "revert": "yarn ts-node ./scripts/revert",
    "pub:beta": "yarn build && npm publish --tag beta",
    "pub:next": "yarn build && npm publish --tag next",
    "pub:release": "yarn build && yarn prepare && npm publish --access public && yarn revert"
  },
  "devDependencies": {
    "@types/big.js": "^6.2.2",
    "@types/chrome": "^0.0.253",
    "@types/crypto-js": "^4.2.1",
    "@types/fs-extra": "^11",
    "@types/jest": "^29.5.10",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.9.4",
    "@types/node-forge": "^1.3.10",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@crossmarkio/typings": "0.0.1-beta",
    "@transia/xrpl": "^2.7.3-alpha.19",
    "axios": "^1.6.2",
    "big.js": "^6.2.1",
    "bip32": "^4.0.0",
    "bip39": "^3.1.0",
    "chalk": "4.1.2",
    "crypto-js": "^4.2.0",
    "ethereumjs-util": "^7.1.5",
    "lodash": "^4.17.21",
    "node-forge": "^1.3.1",
    "webextension-polyfill": "^0.10.0",
    "xrpl": "^2.13.0"
  }
}